python -c"
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from scipy.stats import skew, kurtosis

# Load real data
def load_data():
    products = pd.read_csv('productos.csv')
    products = products.rename(columns={'nombre': 'name', 'precio': 'price', 'categoria': 'category'})
    clients = pd.read_csv('clientes.csv')
    clients = clients.rename(columns={'id_cliente': 'id', 'nombre_cliente': 'name', 'ciudad': 'city', 'fecha_alta': 'registration_date'})
    clients['registration_date'] = pd.to_datetime(clients['registration_date'])
    clients['age'] = (pd.Timestamp.now() - clients['registration_date']).dt.days / 365.25
    sales = pd.read_csv('detalle_ventas.csv')
    sales = sales.rename(columns={'id_venta': 'id', 'id_producto': 'product_id', 'cantidad': 'quantity', 'precio_unitario': 'price_unit', 'importe': 'total_spent'})
    # Assign random client_id to sales since not present in data
    sales['client_id'] = np.random.choice(clients['id'], len(sales))
    # Assign random dates
    sales['date'] = pd.date_range('2023-01-01', periods=len(sales), freq='h')
    return products, clients, sales

# Load data
products, clients, sales = load_data()

# Merge sales and clients for scatter plot
merged_sales_clients = sales.merge(clients, left_on='client_id', right_on='id')

# Set up the figure with 3 subplots (1 row, 3 columns)
fig, axes = plt.subplots(1, 3, figsize=(18, 6))  # Adjust figsize for better visibility

# Graph 1: Histogram of Product Prices
sns.histplot(products['price'], kde=True, ax=axes[0], color='blue')
axes[0].set_title('Product Prices Distribution')
axes[0].set_xlabel('Price ($)')
axes[0].set_ylabel('Frequency')

# Graph 2: Scatter Plot of Age vs. Total Spent
sns.scatterplot(data=merged_sales_clients, x='age', y='total_spent', ax=axes[1], alpha=0.6, color='green')
axes[1].set_title('Age vs. Total Spent')
axes[1].set_xlabel('Age (years)')
axes[1].set_ylabel('Total Spent ($)')

# Graph 3: Box Plot of Prices by Category
sns.boxplot(data=products, x='category', y='price', ax=axes[2], hue='category', palette='Set2', legend=False)
axes[2].set_title('Prices by Category')
axes[2].set_xlabel('Category')
axes[2].set_ylabel('Price ($)')

# Adjust layout for better spacing
plt.tight_layout()
plt.show()
"